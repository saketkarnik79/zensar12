syntax = "proto3";

option csharp_namespace = "DemoGrpcService";

package weather;

service WeatherService {
  rpc GetCurrentWeather (WeatherRequest) returns (WeatherResponse);
}

message WeatherRequest {
  string city = 1;
}

message WeatherResponse {
  string city = 1;
  string condition = 2;
  float temperatureCelsius = 3;
  float humidityPercent = 4;
}
